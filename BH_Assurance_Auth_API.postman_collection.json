{
	"info": {
		"_postman_id": "auth-api-collection-2024",
		"name": "BH Assurance Authentication API",
		"description": "Complete authentication API for BH Assurance platform with user registration, login, profile management, and security features.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"user@example.com\",\n    \"name\": \"John Doe\",\n    \"phone_number\": \"+1234567890\",\n    \"user_type\": \"CLIENT\",\n    \"password\": \"SecurePassword123!\",\n    \"password_confirm\": \"SecurePassword123!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/register/",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"register",
								""
							]
						},
						"description": "Register a new user with email, name, phone, user type, and password"
					}
				},
				{
					"name": "Login User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"SecurePassword123!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/login/",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"login",
								""
							]
						},
						"description": "Login user with email and password. Returns authentication token."
					}
				},
				{
					"name": "Logout User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Token {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/auth/logout/",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"logout",
								""
							]
						},
						"description": "Logout user and invalidate authentication token"
					}
				}
			]
		},
		{
			"name": "Profile Management",
			"item": [
				{
					"name": "Get User Profile",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Token {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/auth/profile/",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"profile",
								""
							]
						},
						"description": "Get current user profile information"
					}
				},
				{
					"name": "Update User Profile",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Token {{auth_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"John Updated Doe\",\n    \"phone_number\": \"+1987654321\",\n    \"bio\": \"Updated bio information\",\n    \"profile_picture\": \"https://example.com/profile.jpg\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/profile/update/",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"profile",
								"update",
								""
							]
						},
						"description": "Update user profile information"
					}
				}
			]
		},
		{
			"name": "Password Management",
			"item": [
				{
					"name": "Change Password",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Token {{auth_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"current_password\": \"SecurePassword123!\",\n    \"new_password\": \"NewSecurePassword123!\",\n    \"new_password_confirm\": \"NewSecurePassword123!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/change-password/",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"change-password",
								""
							]
						},
						"description": "Change user password (requires current password)"
					}
				},
				{
					"name": "Request Password Reset",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"user@example.com\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/request-password-reset/",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"request-password-reset",
								""
							]
						},
						"description": "Request password reset email"
					}
				},
				{
					"name": "Confirm Password Reset",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"token\": \"reset-token-uuid-here\",\n    \"new_password\": \"NewSecurePassword123!\",\n    \"new_password_confirm\": \"NewSecurePassword123!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/confirm-password-reset/",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"confirm-password-reset",
								""
							]
						},
						"description": "Confirm password reset with token"
					}
				}
			]
		},
		{
			"name": "Session Management",
			"item": [
				{
					"name": "Get User Sessions",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Token {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/auth/sessions/",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"sessions",
								""
							]
						},
						"description": "Get all active user sessions"
					}
				},
				{
					"name": "Terminate Specific Session",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Token {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/auth/sessions/{{session_key}}/terminate/",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"sessions",
								"{{session_key}}",
								"terminate",
								""
							]
						},
						"description": "Terminate a specific session by session key"
					}
				},
				{
					"name": "Terminate All Other Sessions",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Token {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/auth/sessions/terminate-all/",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"sessions",
								"terminate-all",
								""
							]
						},
						"description": "Terminate all other sessions except current"
					}
				}
			]
		}
	],
